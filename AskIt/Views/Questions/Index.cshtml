@model List<QuestionViewModel>

@{
    ViewData["Title"] = "Domande";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"] <i class="fas fa-comments text-primary ms-2"></i></h2>

    <div class="row justify-content-center">
        <div class="col-lg-9">
            @foreach (var question in Model)
            {
                <div class="card mb-3 shadow-sm hover-shadow">
                    <div class="card-body position-relative">
                        <div class="d-flex align-items-start">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-2">
                                    <a href="@Url.Action("Detail", "Questions", new { id = question.Id })"
                                       class="text-decoration-none fw-bold text-dark title-truncate">
                                        @question.Title
                                    </a>
                                </h5>
                                <p class="card-text text-muted mb-3 body-truncate">@question.Body</p>

                                <div class="d-flex justify-content-between align-items-center text-muted small">
                                    <div>
                                        <i class="fas fa-clock me-1"></i>
                                        <span>@question.CreatedAt.ToString("dd MMM yyyy, HH:mm")</span>
                                        @if (question.UpdatedAt != null)
                                        {
                                            <span class="mx-2">|</span>
                                            <i class="fas fa-edit me-1"></i>
                                            <span>@question.UpdatedAt.ToString("dd MMM yyyy, HH:mm")</span>
                                        }
                                    </div>
                                    <a href="@Url.Action("Details", "Questions", new { id = question.Id })"
                                       class="btn btn-link text-primary p-0">
                                        Leggi tutto <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="ps-3">
                                <i class="fas fa-question-circle fa-2x text-primary opacity-25"></i>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.08);
    }

        .hover-shadow:hover {
            box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.08);
            transform: translateY(-3px);
        }

    .title-truncate {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        font-size: 1.25rem;
    }

    .body-truncate {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.5;
        color: #6c757d !important;
    }

    .card {
        border-radius: 12px;
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
    }

    .btn-link:hover {
        text-decoration: underline !important;
    }
</style>