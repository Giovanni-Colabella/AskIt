@model QuestionDetailViewModel

@{
    ViewData["Title"] = "Dettaglio Domanda";
}

<div class="container mt-4">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Question Card -->
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <!-- Voting -->
                        <div class="vote-section me-3 text-center">
                            <button class="btn btn-link p-0 text-muted">
                                <i class="fas fa-arrow-up fa-lg hover-upvote"></i>
                            </button>
                            <div class="my-1 fw-bold fs-5">@Model.Likes</div>
                            <button class="btn btn-link p-0 text-muted">
                                <i class="fas fa-arrow-down fa-lg hover-downvote"></i>
                            </button>
                        </div>

                        <!-- Question Content -->
                        <div class="flex-grow-1">
                            <div class="d-flex align-items-center mb-2">
                                <small class="text-muted me-2">
                                    <i class="fas fa-user-circle me-1"></i>
                                    @Model.AuthorId
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    @Model.CreatedAt.ToString("dd MMM yyyy HH:mm")
                                </small>
                            </div>

                            <h1 class="mb-3 fw-bold">@Model.Title</h1>

                            <div class="question-body mb-4">
                                @Model.Body
                            </div>

                            <div class="d-flex align-items-center">

                                <small class="text-muted me-3">
                                    <i class="fas fa-comments me-1"></i>
                                    @Model.Answers.Count risposte
                                </small>
                                @if (Model.UpdatedAt != null)
                                {
                                    <small class="text-muted">
                                        <i class="fas fa-edit me-1"></i>
                                        modificata @Model.UpdatedAt.ToString("dd MMM HH:mm")
                                    </small>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Answers -->
            <h4 class="mb-3"><i class="fas fa-comments me-2"></i>Risposte</h4>

            @foreach (var answer in Model.Answers)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-start">
                            <!-- Answer Voting -->
                            <div class="vote-section me-3 text-center">
                                <button class="btn btn-link p-0 text-muted">
                                    <i class="fas fa-arrow-up fa-lg hover-upvote"></i>
                                </button>
                                <button class="btn btn-link p-0 text-muted">
                                    <i class="fas fa-arrow-down fa-lg hover-downvote"></i>
                                </button>
                            </div>

                            <!-- Answer Content -->
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center mb-2">
                                    <small class="text-muted me-2">
                                        <i class="fas fa-user-circle me-1"></i>
                                        @answer.AuthorId
                                    </small>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        @answer.CreatedAt.ToString("dd MMM yyyy HH:mm")
                                    </small>
                                </div>

                                <p class="mb-0">@answer.Body</p>

                                <div class="mt-3">
                                    <button class="btn btn-link text-muted p-0 me-3">
                                        <i class="fas fa-reply me-1"></i>Rispondi
                                    </button>
                                    <button class="btn btn-link text-muted p-0">
                                        <i class="fas fa-flag me-1"></i>Segnala
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Add Answer Form -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3"><i class="fas fa-edit me-2"></i>Aggiungi risposta</h5>
                    <form asp-action="AddAnswer" method="post">
                        <input type="hidden" name="QuestionId" value="@Model.Id" />
                        <div class="form-group mb-3">
                            <textarea class="form-control" name="Body" rows="4"
                                      placeholder="Scrivi la tua risposta..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-1"></i>Pubblica risposta
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="mb-3"><i class="fas fa-info-circle me-2"></i>Informazioni</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-calendar-plus me-2"></i>
                            Creata: @Model.CreatedAt.ToString("dd MMM yyyy")
                        </li>

                    </ul>
                </div>
            </div>

 
        </div>
    </div>
</div>

<style>
    .vote-section {
        min-width: 40px;
    }

    .hover-upvote:hover {
        color: #FF4500 !important;
    }

    .hover-downvote:hover {
        color: #7193FF !important;
    }

    .question-body {
        font-size: 1.1rem;
        line-height: 1.7;
        white-space: pre-wrap;
    }

    .card {
        border-radius: 10px;
        border: 1px solid rgba(0,0,0,0.08);
    }

    .form-control {
        border-radius: 8px;
    }
</style>