@model CourseListViewModel

@{
    ViewData["Title"] = "Corsi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">
            <i class="fas fa-book-open"></i> @ViewData["Title"]
        </h1>
        <a class="btn btn-success" asp-action="Create">
            <i class="fas fa-plus"></i> Aggiungi Corso
        </a>
    </div>

    @if (!Model.Courses.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-circle"></i> Nessun corso disponibile.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var course in Model.Courses)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-graduation-cap text-secondary"></i> @course.CourseName
                            </h5>
                            <p class="card-text">@course.CourseDescription</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> Dettagli
                            </a>
                            <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Modifica
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>