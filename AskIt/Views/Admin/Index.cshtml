<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Ask.it Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .admin-sidebar {
            min-height: 100vh;
            background: #2c3e50;
            padding: 20px;
            position: fixed;
            width: 250px;
        }

        .admin-main {
            margin-left: 250px;
            padding: 20px;
        }

        .nav-link {
            color: #ecf0f1 !important;
            transition: all 0.3s;
        }

            .nav-link:hover {
                background: #34495e;
                padding-left: 25px !important;
            }

        .stat-card {
            transition: transform 0.3s;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="admin-sidebar">
                <h2 class="text-white mb-4">Ask.it Admin</h2>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-users me-2"></i> Utenti
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-comments me-2"></i> Post Forum
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-book-open me-2"></i> Corsi
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-cog me-2"></i> Impostazioni
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="admin-main">
                <!-- Top Bar -->
                <div class="d-flex justify-content-between mb-4">
                    <h3>Dashboard Amministrativa</h3>
                    <div class="d-flex align-items-center">
                        <div class="input-group me-3">
                            <input type="text" class="form-control" placeholder="Cerca...">
                            <button class="btn btn-outline-secondary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-2"></i>Admin
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profilo</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row g-4 mb-4">
                    <div class="col-md-3">
                        <div class="card stat-card bg-primary text-white">
                            <div class="card-body">
                                <h5><i class="fas fa-users me-2"></i>Utenti</h5>
                                <h2>1,234</h2>
                                <small>+12% dall'ultimo mese</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card bg-success text-white">
                            <div class="card-body">
                                <h5><i class="fas fa-comments me-2"></i>Post</h5>
                                <h2>5,678</h2>
                                <small>+24% dall'ultima settimana</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card bg-info text-white">
                            <div class="card-body">
                                <h5><i class="fas fa-book-open me-2"></i>Corsi</h5>
                                <h2>45</h2>
                                <small>3 nuovi questo mese</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card bg-warning text-dark">
                            <div class="card-body">
                                <h5><i class="fas fa-chart-line me-2"></i>Attività</h5>
                                <h2>89%</h2>
                                <small>Utenti attivi</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Attività Recenti</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Utente</th>
                                        <th>Azione</th>
                                        <th>Data</th>
                                        <th>Stato</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Mario Rossi</td>
                                        <td>Nuovo post creato</td>
                                        <td>2023-07-20</td>
                                        <td><span class="badge bg-success">Approvato</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <!-- Aggiungi altre righe qui -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>