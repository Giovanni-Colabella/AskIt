<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AskIt</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AskIt.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AskIt</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-between">
                    <!-- Menu sinistra -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Forum" asp-action="Index">
                                Forum
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Courses" asp-action="Index">
                                Corsi
                            </a>
                        </li>
                    </ul>

                    <!-- Pulsanti a destra -->
                    <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center gap-2">
                        <!-- Pulsante cambio tema (solo icona) -->
                        <button id="themeToggle" class="btn btn-outline-light btn-sm" title="Cambia tema">
                            <i class="fas fa-circle-half-stroke"></i>
                        </button>

                        @if (User?.Identity?.IsAuthenticated != true)
                        {
                            <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Register">
                                Registrati
                            </a>
                            <a class="btn btn-light btn-sm" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        }
                        else
                        {
                            <a class="text-light d-flex align-items-center nav-link" 
                                asp-action="Profile" asp-controller="Account">
                                <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                            </a>

                            <a asp-action="Logout" asp-controller="Account" class="btn btn-outline-light btn-sm">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        }
                    </div>


                </div>
            </div>
        </nav>

        <div style="padding: 3em;"></div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - AskIt - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <span> Sviluppato da Giovanni Colabella</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
