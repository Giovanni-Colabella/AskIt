@model CreateQuestionInputModel

@{
    ViewData["Title"] = "Aggiungi Domanda";
}

<h1>Aggiungi Domanda</h1>

<form asp-action="AddQuestion" method="post">
    <div class="form-group">
        <label for="Title">Titolo</label>
        <input type="text" asp-for="Title" class="form-control" placeholder="Inserisci il titolo della domanda" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label for="Body">Descrizione</label>
        <textarea asp-for="Body" class="form-control" placeholder="Descrivi la tua domanda" rows="10"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Pubblica</button>
</form>    
